{
  "name": "modular-synth",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "volta": {
    "node": "18.12.1",
    "yarn": "1.22.17"
  },
  "scripts": {
    "start": "craco start",
    "prebuild": "yarn wasm:build",
    "build": "craco build",
    "test": "craco test",
    "wasm:build": "cd ./wasm-audio && wasm-pack build --target bundler",
    "format": "yarn format:file '**/*'",
    "format:file": "prettier --write --ignore-unknown",
    "lint": "yarn lint:file .",
    "lint:file": "./node_modules/.bin/eslint --max-warnings=0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "uuid": "^9.0.0",
    "wasm-audio": "./wasm-audio/pkg",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@craco/craco": "^7.0.0",
    "@craco/types": "^7.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/audioworklet": "^0.0.35",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4",
    "@types/node": "^16.7.13",
    "@types/prettier": "^2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^9",
    "prettier": "^2.8.1",
    "prettier-plugin-sh": "^0.12.8",
    "typescript": "^4.4.2",
    "worklet-loader": "^2.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
